extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='email') Email:
            input#email.form-control(type='text' name='email' value=(undefined===email ? '' : email))
            input#food.form-control(type='text' name='food' value=(undefined === food ? '' : food))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
