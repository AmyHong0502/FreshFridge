extends layout

block content
    // Intro Header
    header(class="masthead")
        div(class="intro-body")
            div(class="container")
                div(class="row")
                    div(class="col-lg-10 mx-auto")
                        h1(class="brand-heading") #{title}
                        p(class="intro-text") #{subtitle}
                        a(href="#about" class="btn btn-circle js-scroll-trigger")
                            i(class="fa fa-angle-double-down animated")

    // Ingredients Section
    section#functional(class="content-section text-center")
        div(class="container")
            div(class="col-lg-10 mx-auto")
                h2 Search Recipes by Ingredients
                div(class="input-group input-group-lg header")
                    //form(method='POST' action='/recipes')
                    input#myInput(
                    type="text" name="add" class="form-control"
                    placeholder="Enter Ingredients..")
                    button#btnadd(
                    name="add-to-list" onclick="listNewIngredient();"
                    class="btn btn-large btn-primary" style="width:140px") Add
                    button#btnsubmit(type="submit" name="Submit-to-Node" onclick="submission();"
                    class="btn btn-large btn-primary" style="width:140px") Submit
                    button(onclick="extractUserIngredients();")
                div#myDIV(class="header")
                    ul#ingredientsUL
                div
                    div#recipes
                    div#moreButton
                        table#newrecipe

    // About Section
    section#about(class="about-section text-center")
        div(class="container")
            div(class="row")
                div(class="col-lg-10 mx-auto")
                    h2 about #{title}
                    p.
                        Our goal is to provide users with alternate methods of using the food rather than throwing it out.
                        This not only <b>helps save money</b> but <b>reduces food waste</b> as well.
                        Let's work hard to decrease the amount of food waste.

    // The Team Section
    section#team(class="team-section text-center")
        div(class="container")
            div(class="row")
                div(class="col-lg-10 mx-auto")
                    h2 The Team
                    p <b>Known as District9</b>
                    span(style="float: left; font-size: 9pt; text-align: center; width: 19%; margin-right: 1%; margin-bottom: 0.5em;")
                        img(src="/img/Caleb.png" style="width: 100%")
                        p This is Caleb. He's our full-stack developer.
                    span(style="float: left; font-size: 9pt; text-align: center; width: 19%; margin-right: 1%; margin-bottom: 0.5em;")
                        img(src="/img/Amy.png" style="width: 100%")
                        p This is Amy. She's a back-end master.
                    span(style="float: left; font-size: 9pt; text-align: center; width: 19%; margin-right: 1%; margin-bottom: 0.5em;")
                        img(src="/img/Viktor.png" style="width: 100%")
                        p This is Viktor. He worked on the front-end and graphics.
                    span(style="float: left; font-size: 9pt; text-align: center; width: 19%; margin-right: 1%; margin-bottom: 0.5em;")
                        img(src="/img/Jas.png" style="width: 100%")
                        p This is Jas. She worked on the front-end and styling.
                    span(style="float: left; font-size: 9pt; text-align: center; width: 19%; margin-right: 1%; margin-bottom: 0.5em;")
                        img(src="/img/Jonah.png" style="width: 100%")
                        p This is Jonah. He also worked on the front-end.

    // Contact Section
    section#contact(class="contact-section text-center")
        div(class="container")
            div(class="row")
                div(class="col-lg-8 mx-auto")
                    h2 Contact Us
                        ul(class="list-inline banner-social-buttons")
                            li(class="list-inline-item")
                                a(href="https://github.com/AmyHong0502/COMP2910-Group9" class="btn btn-default btn-lg")
                                    i(class="fa fa-github fa-fw")
                                    span(class="network-name") Github

    script(type='text/javascript' src='/js/yummly-api.js')